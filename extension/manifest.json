{
  "manifest_version": 3,
  "name": "Speck Gmail Extension",
  "version": "1.0",
  "description": "Extends Gmail UI to include email summaries from Speck",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["gmail-content.js"],
      "css": ["styles.css"]
    },
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {}
}