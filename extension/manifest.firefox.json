{
  "manifest_version": 2,
  "name": "Speck Gmail Extension",
  "version": "1.0",
  "description": "Extends Gmail UI to include email summaries from Speck",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["gmail-content.js"],
      "css": ["styles.css"]
    },
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "your-extension-id@domain.com",
      "strict_min_version": "42.0"
    }
  },
  "browser_action": {}
}